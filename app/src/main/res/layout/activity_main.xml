<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ffff">
    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#424143"
        android:text="0"
        android:textColor="#fff"
        android:textSize="78dp"
        android:textAlignment="textEnd"
        />
    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                
                <Button
                    android:id="@+id/btn_borrar"
                    android:text="C"
                    android:textSize="30dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#E4E1E1"
                    android:onClick="clicoperacion"/>

                <Button
                    android:id="@+id/btn_porcent"
                    android:text="%"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#E4E1E1"/>

                <Button
                    android:id="@+id/btn_div"
                    android:text="/"
                    android:textSize="30dp"
                    android:textColor="#ffff"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#FF9800"
                    android:onClick="clicoperacion"/>
            </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn_multi"
                android:text="x"
                android:textSize="30dp"
                android:textColor="#ffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:onClick="clicoperacion"/>

        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn_resta"
                android:text="-"
                android:textSize="30dp"
                android:textColor="#ffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:onClick="clicoperacion"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn_suma"
                android:text="+"
                android:textSize="30dp"
                android:textColor="#ffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:onClick="clicoperacion"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="25dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn_decimal"
                android:text="."
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffff"
                android:onClick="clicNumero"/>

            <Button
                android:id="@+id/btn_igual"
                android:text="="
                android:textSize="30dp"
                android:textColor="#ffff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FF9800"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>